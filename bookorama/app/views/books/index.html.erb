<% @page_title = "Books" %>

<h2>Books</h2>
<hr>
<%= link_to("Add New Book", {:action => 'new'}, :class => 'new_element btn glyphicon glyphicon-plus') %>

<hr/>

<table class="table">

    <table class="table table-striped table-responsive">
        <tr>
            <th>Category</th>
            <th>Image</th>
            <th>Author</th>
            <th>Title</th>
            <th>Book Price</th>
            <th>CRUD</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.category.category_name if book.category %></td>
            <td><%= image_tag(book.photo.url(:thumb)) %></td>
            <td><%= book.author %></td>
            <td><%= book.title %></td>
            <!-- <td><%= truncate(book.description, :length => 14, :omission => " ... ") %></td> -->
            <td><%= number_to_currency( book.price, :unit => "$")%></td>
            <td class="actions">
                <%= link_to("Show", {:action => 'show', :id => book.id}, :class => 'btn btn-success btn-xs') %>
                <%= link_to("Edit", {:action => 'edit', :id => book.id}, :class => 'btn btn-warning btn-xs') %>
                <%= link_to("Delete", {:action => 'delete', :id => book.id}, :class => 'btn btn-danger btn-xs') %>
            </td>
        </tr>
        <% end %>
    </table>

</table>

